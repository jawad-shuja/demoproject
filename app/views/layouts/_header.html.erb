<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= image_tag 'site-logo.png', class: 'site-logo' %>
        <%= link_to 'E-Hub', root_path, class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class=<%= highlight_if_active new_product_path %> >
            <%= link_to('Sell Product', new_product_path) %>
          </li>
          <li>
            <%= form_tag products_path, method: :get do %>
              <%= text_field_tag :search, params[:search], placeholder: 'Find Product', class: 'form-control narrow' %>
            <% end %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "<span class='glyphicon glyphicon-shopping-cart'></span>".html_safe, cart_path %>
          </li>
          <li>
            <%= link_to cart_items_count, cart_path, id: 'cart-count' %>
          </li>
          <% if user_signed_in? %>
            <li class=<%= highlight_if_active dashboard_users_path %>>
              <%= link_to 'Dashboard', dashboard_users_path %>
            </li>
            <li class=<%= highlight_if_active orders_path %>>
              <%= link_to 'Orders', orders_path %>
            </li>
            <li class=<%= highlight_if_active edit_user_registration_path %>>
              <%= link_to('Edit Profile', edit_user_registration_path) %>
            </li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
            </li>
          <% else %>
            <li class=<%= highlight_if_active new_user_registration_path %>>
              <%= link_to('Register', new_user_registration_path) %>
            </li>
            <li class=<%= highlight_if_active new_user_session_path %>>
              <%= link_to('Login', new_user_session_path) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
