<div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-lg-offset-3">
  <h1>Card Details</h1>
  <%= form_tag orders_path, method: 'post' do %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this order from being saved:</h2>
        <ul>
          <% @order.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= label_tag :card_num, 'Card Number:' %>
      <%= text_field_tag :card_num, '', required: true, class: 'form-control' %>
    </div>
    <div>
      <%= label_tag :expiry, 'Expiry Date:' %>
    </div>
    <div class="row">
      <div class="col-sm-4 col-lg-6">
        <%= text_field_tag :expiry_month, '', placeholder: 'MM', maxlength: 2, required: true, class: 'form-control' %>
      </div>
      <div  class="col-sm-4 col-lg-6">
        <%= text_field_tag :expiry_year, '', placeholder: 'YY', maxlength: 2, class: 'form-control' %>
      </div>
    </div>
    <div>
      <%= label_tag :card_num, 'Shipping Address:' %>
      <%= text_area_tag :shipping_address, '', class: 'form-control' %>
    </div>
    <div class="pull-right">
      <%= submit_tag 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
