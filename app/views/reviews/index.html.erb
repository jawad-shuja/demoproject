<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h1>Listing reviews</h1>

      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Body</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.body %></td>
                <td class="actions">
                  <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, product_review_path(@product, review) %>
                  <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_product_review_path(@product, review) if owner?(review.user_id) %>
                  <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, product_review_path(@product, review), method: :delete, data: { confirm: 'Are you sure?' } if deletable? review %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= link_to 'New Review', new_product_review_path(@product) %> |
      <%= link_to 'Back', product_path(@product) %>
    </div>
  </div>
</div>
