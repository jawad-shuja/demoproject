<% if @discount && @discount.is_valid %>
  $.cookie.json = true;
  var discounted = $.cookie('subtotal') * <%= @discount_percentage %>;
  $.cookie('total', discounted, { path: '/'});
  $.cookie('verified-coupon', <%= @discount.coupon %>, { path: '/'});
  $('.price-total').text(discounted);
  $('#discount-container').fadeOut(200, function(){
     $(this).remove();
  });
  $('.modal-body').text('Your discount has been applied.');
  $('#modal-link').trigger('click');
<% else %>
  $('.modal-body').text('Sorry! The coupon is not valid.');
  $('#modal-link').trigger('click');
<% end %>
