<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h1 class="title text-center">Products</h1>

      <div class="text-center">
        <%= paginate @products %>
      </div>
      <div id="products" class="row list-group">
        <% unless @products.present? %>
          <div class="text-center">
            <span>No products found</span>
          </div>
        <% end %>
        <% @products.each do |product| %>
          <div class="item col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="thumbnail">
              <div class="thumb-image">
                <%= image_tag product.attachments.first.photo.url(:small), class: 'group list-group-image' if product.attachments.present? %>
              </div>
              <div class="caption">
                <h2 class="group inner list-group-item-heading"><%= product.title %></h2>
                <div class="row">
                  <div class="col-lg-12">
                    <div class="lead">$<%= product.price %></div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">
                    <%= link_to 'Show', product, class: 'btn btn-success' %>
                    <%= link_to 'Add to cart', 'javascript:;', id: "add-#{product.id}", data: { id: product.id, target: '#message', toggle: 'modal', price: product.price }, class: 'btn btn-primary add-btn' unless item_in_cart?(product) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="text-center">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>
