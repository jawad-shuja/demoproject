<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @product.body %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Images:</strong>
  <% @product.attachments.each do |attachment| %>
    <%= image_tag attachment.photo.url, size: '200x200' %>
  <% end %>
</p>

<h1>Reviews</h1>

<div id="reviews">

  <%= render @product.reviews %>
</div>

<%= render 'reviews/review_form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Go to reviews page', product_reviews_path(@product) %> |
<%= link_to 'See owner', user_path(@product.user) %> |
<%= link_to 'Back', products_path %>
